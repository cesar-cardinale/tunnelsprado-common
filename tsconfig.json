{
  "compilerOptions": {
    "target": "es2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",
    "module": "AMD",
    "lib": ["es2022", "dom"],
    "rootDir": "./src/",
    "outFile": "./dist/dist.js"
  },
  "include": [
    "src/**/*"
  ]
}
